</div>

<div class="control-group">
  <%= label_tag 'age', 'Age', :class => 'control-label' %>
  <%= number_field_tag 'age', '', :class => 'controls', :"ng-model" => "submission.age" %>
</div>

<div class="control-group">
  <%= label_tag 'address', 'Address', :class => 'control-label' %>
  <%= text_area_tag 'address', '', :class => 'controls', :"ng-model" => "submission.address" %>
</div>